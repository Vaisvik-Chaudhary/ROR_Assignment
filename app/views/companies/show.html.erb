 <div class="container-fluid">
      <div class="navbar-brand d-flex align-items-center" href="#" >
     
   <div class="head" style="font-size: 30px;color:white;" >Dashboard</div> 
    </div>
    <div class="container">
    <form class="d-flex justify-content-between align-items-center " >
    <h1> Details of <%=@company.company_name%></h1>
    <%= link_to "New employee", new_company_employee_path(@company), class:"btn btn-outline-success"%>
   
    </form>
<hr>
<p style="color: green"><%= notice %></p>

<%= render @company %>

<div>
  <%= link_to "Edit", edit_company_path(@company),class:"btn btn-secondary" %> 
   
  <%= link_to "Back", companies_path, class:"btn btn-secondary" %>
</div>
<br>
<div>  
  <%= button_to "Delete", @company, method: :delete, class:"btn btn-danger" %>
</div>
</div>
<hr>
<div class="container">
<h1>Employees Details </h1>
  <table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
   <% @company.employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
          <td><%= employee.email %></td>
            <td><%= employee.mobile_number %></td>
        <td><%= link_to 'Show', company_employee_path(@company, employee) ,class:"btn btn-secondary"%></td>
        <td><%= link_to 'Edit ', edit_company_employee_path(@company, employee),class:"btn btn-secondary" %></td>
        <td><%= button_to 'Destroy', [@company, employee], method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
        </tr>
    <% end %>
  </tbody>
</table>



</div>