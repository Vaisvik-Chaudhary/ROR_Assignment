  <div class="mt-2 mx-3">
  <%= link_to "Back", company_path(@company), class:"btn btn-secondary" %>
  <div class="container mt-2">
  
<h1>Employees Details </h1>
<div id="employees">
  <table class="table">
  <thead>
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Number</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>

  <tbody>
   <% @company.employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
          <td><%= employee.email %></td>
            <td><%= employee.mobile_number %></td>
        <td><%= link_to 'Show', company_employee_path(@company, employee) ,class:"btn btn-secondary"%></td>
        <td><%= link_to 'Edit ', edit_company_employee_path(@company, employee),class:"btn btn-secondary" %></td>
        <td><%= button_to 'Delete', [@company, employee], method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
